<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" role="listbox">
    <% @phones.each_with_index do |phone,i| %>
    <div class="carousel-item <%= i == 0 ? 'active' : ''%>" style="text-align: center;" >
      <img class="d-block img-fluid" src="<%=phone.img%>" alt="<%=phone.name%>" style="margin: auto; width: 400px;">
      <%= phone.name %>
      <%= phone.description %>
      <%= rating_for phone, 'product', star: 5 %>
        

    </div>
    <%end%>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


